{
  "packages": [
    "nodejs@latest",
    "nodePackages.pnpm@latest"
  ],
  "shell": {
    "scripts": {
      "dev:client": [
        "cd ./client",
        "pnpm run dev"
      ],
      "dev:daemon": [
        "cd ./daemon",
        "pnpm run dev"
      ],
      "trigger": [
        "cd ./daemon",
        "pnpm run trigger"
      ],
      "deploy:daemon": [
        "cd ./daemon",
        "pnpm run deploy"
      ],
      "deploy:client": [
        "cd ./client",
        "pnpm run deploy"
      ]
    }
  }
}